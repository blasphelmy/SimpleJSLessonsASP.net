@model IEnumerable<DataDataTable>
<link rel="stylesheet" href="~/css/masonaryEffect.css" />
<br /><br />
@*<div class="container">*@
    <div class="container res" style="max-width:95%" data-masonry='{"percentPosition": true }'>
        @foreach (DataDataTable data in Model)
        {
        <div class="card democard scale" id="@data.DataHash">
            <div style="position:relative" id="@(data.DataHash + "content")">
                @if (data.ImageData != "null" && data.ImageData != null)
                {
                    <img src="@data.ImageData" alt="@data.DataHashNavigation.Title">
                }else
                {
                    <img src="~/img/placeholder.png" alt="@data.Title">
                }
                <div class="text">
                    <a class="text-decoration-none" href="/?key=@data.DataHash"><h3>@data.DataHashNavigation.Title</h3></a>
                     <p style="color: black; font-size: 13px">Authored by @data.UploadedBy</p>
                    <p style="color: black; font-size: 10px">Created @data.UploadDate.ToShortDateString()</p>
                </div>
            </div>
        </div>
        }
    </div>
@*</div>*@
<script src="~/js/cardviews.js"></script>
<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>