@model IEnumerable<DataDataTable>
<style>
.cards {
display: flex;
flex-direction: column;
flex-wrap: wrap;
align-content: flex-start;
height: 90vh;
max-width: 100%;
}

.card {
width: 200px;
margin: 10px;
border: 1px solid #ccc;
box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3);
}

.card img {
max-width: 100%;
}

.card .text {
padding: 20px;
}

.card .text > button {
    background: gray;
    border: 0;
    color: white;
    padding: 10px;
    width: 100%;
}
h3 {
    font-size: 16px;
}
</style>
<main class="cards">
    @foreach (DataDataTable data in Model)
    {
    <article class="card">
        @if (data.ImageData != "null" && data.ImageData != null)
        {
            <img src="@data.ImageData" alt="@data.Title">
        }
        <div class="text">
            <a href="/?key=@data.DataHash">
                <h3>@data.Title</h3>
            </a>
            <p>@data.UploadedBy</p>
        </div>
    </article>
    }
</main>