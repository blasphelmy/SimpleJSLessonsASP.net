@model loginControl
@{

}
<style>
    label {
        margin-top: 10px;
    }

    input {
        margin-top: 15px;
    }
</style>
<br>
<br>
<div class="container">
    <h1>Login to your account</h1>
    <form id="login">
        <div class="form-group">
            <div id="loginwarning" class="text-warning"></div>
            <label asp-for="username" class="control-label"></label>
            <input id="username" asp-for="username" class="form-control" />
            <span id="usernameWarning" asp-validation-for="username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="password" class="control-label"></label>
            <input id="password" asp-for="password" class="form-control" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        <div class="form-group"><button class="btn btn-primary" id="loginBtn">Login</button></div>
    </form>
    <script src="/js/login.js"></script>
    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>